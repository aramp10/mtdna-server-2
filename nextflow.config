// Specify process-level configuration
process {
    executor = 'sge'
    penv = 'omp'
    // aramp10 edit: Add your SCC project here
    clusterOptions = '-P ar-rcs'
    beforeScript = 'source $HOME/.bashrc'
}

manifest {
    name                                  = 'mtDNA-Server 2'
    version                               = 'v2.1.16'
    description                           = 'mtDNA Variant Calling'
    author                                = 'Sebastian SchÃ¶nherr, Hansi Weissensteiner, Lukas Forer'
    homePage                              = 'https://github.com/genepi/mtdna-server-2'
    mainScript                            = 'main.nf'
    nextflowVersion                       = '!>=21.04.0'
}

// Global default params, used in configs
params {

    project                = null
    output                 = null
    project_date           = "`date`"
    files                  = null    
    reference              = "rcrs"
    mode                   = "fusion"
    detection_limit        = 0.01    
    mapQ                   = 20
    baseQ                  = 20
    alignQ                 = 30
    coverage_estimation    = "on"
    max_samples            = 0
    subsampling            = "off"
    subsampling_coverage   = 2000
    min_mean_coverage      = 50
    min_mean_base_quality  = 10


    service = [
        name: "mtDNA-Server 2",
        url: "https://mitoverse.i-med.ac.at",
        email: "noreply@i-med.ac.at",
        github: "https://github.com/genepi/mtdna-server-2"

    ]

    config = [
        send_mail: false
    ]

    
}

// Load base.config by default for all pipelines
includeConfig 'conf/base.config'

profiles {
    debug { process.beforeScript          = 'echo $HOSTNAME' }

    // aramp10 edit: point to the locally built container
    // process.container                 = 'quay.io/genepi/mtdna-server-2:v2.1.16'
    process.container                 = '/projectnb/ar-rcs/client/nmf35/INC20738179_Nextflow/mtdna-server-2/containers/
    docker.enabled                    = true
    singularity.enabled               = false

        
    development {
        process.container                 = 'genepi/mtdna-server-2'
        docker.enabled                    = true
        resume                            = true
        singularity.enabled               = false
    }

    docker {
        docker.enabled                    = true
        singularity.enabled               = false
    }

    singularity {
        singularity.enabled               = true
        singularity.autoMounts            = true
        docker.enabled                    = false
    }
    
    slurm {
        process.executor                  = 'slurm'
        singularity.enabled               = true
        singularity.autoMounts            = true
        docker.enabled                    = false
    }
    

   test      {
        includeConfig 'conf/test.config'
   }
   
}
