    nextflow_pipeline {

    name "Test Workflow main.nf"
    script "main.nf"
    
    test("Runs with single BAM file") {

        when {
            params {
               project = "test-job"
               files   = "$projectDir/tests/data/bam/*.bam"
               output  = "out"
            }
        }

        then {
            assert workflow.success
            assert snapshot(new File("out"), workflow.trace).match()
        }

    }

    }